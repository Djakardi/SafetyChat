<Window x:Class="SafetyChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafetyChat" xmlns:viewmodel="clr-namespace:SafetyChat.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#483D8B"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="1,0,-1,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#191970"
                Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="Safety Chat"
                       Foreground="Pink"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                <Button Grid.Column="2"
                        BorderThickness="0"
                        Foreground="Pink"
                        Background="Transparent"
                        Width="20"                        
                        Height="20"
                        Content="___"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"/>

                <Button 
                         Grid.Column="3"
                         BorderThickness="0"
                         Foreground="Pink"
                         Background="Transparent"
                         Width="20"
                         Height="20"
                         Content="☐"
                         Click="WindowsStateButton_Click"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <Button Grid.Column="4"
                        Foreground="Pink"
                        BorderThickness="0"
                        Background="Transparent"
                        Width="20"
                        Height="20"
                        Content="X"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0"/>
            </Grid>
        </Border>

    </Grid>
</Window>
