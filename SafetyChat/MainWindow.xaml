<Window x:Class="SafetyChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafetyChat" xmlns:viewmodel="clr-namespace:SafetyChat.MVVM.ViewModel"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#483D8B"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#191970">

            <Grid HorizontalAlignment="Stretch">
                <Label Foreground="Gold"
                        FontWeight="SemiBold">


                    <StackPanel 
                        HorizontalAlignment="Stretch"
                        Orientation="Horizontal">
                        <TextBlock Text="Safety Chat"/>

                        <Button Width="20" Height="20" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Label>

            </Grid>

        </Border>
        
    </Grid>
</Window>
